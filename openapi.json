{
  "openapi": "3.0.0",
  "info": {
    "title": "South Africa ID Validator API",
    "version": "1.0.0",
    "description": "Checks if a South African ID number is valid."
  },
  "servers": [
    {
      "url": "https://sa-vaildate-id-api.onrender.com"
    }
  ],
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-RapidAPI-Key"
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ],
  "paths": {
    "/verify-id": {
      "get": {
        "summary": "Validate South African ID number",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "South African ID number",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "example": {
                  "id": "9001015800082",
                  "valid": true,
                  "date_of_birth": "1990-01-01",
                  "gender": "Male",
                  "citizen": "citizen"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid ID format"
          }
        }
      }
    }
  }
}
